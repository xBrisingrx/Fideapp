<%= form_with(model: @apple, id: 'form-apple' ,class: 'needs-validation g-brd-around g-brd-gray-light-v4 g-pa-30 g-mb-30') do |form| %>
  <div class="form-group row">
    <%= form.label :code, 'Denominacion (*):' ,class: 'col-8 col-sm-4' %>
    <%= form.text_field :code, class: 'form-control rounded-0 col-12 col-sm-6', required: true %>
    <div class="invalid-feedback apple_code"></div>
  </div>

  <div class="form-group row">
    <%= form.label :hectares, 'NÂ° hectareas:' ,class: 'col-8 col-sm-4' %>
    <%= form.number_field :hectares, class: 'form-control rounded-0 col-12 col-sm-6', step:'0.001' %>
    <div class="invalid-feedback apple_hectares"></div>
  </div>

  <div class="form-group row">
    <%= form.label :space_not_available, 'Superficie no utilizable (mÂ²):' ,class: 'col-8 col-sm-4' %>
    <%= form.number_field :space_not_available, class: 'form-control rounded-0 col-12 col-sm-6', step:'0.0001'%>
    <div class="invalid-feedback apple_space_not_available"></div>
  </div>

  <div class="form-group row">
    <div class="col-8 col-sm col-lg-9">
      <%= form.select(:sector_id, @sectors.collect {|s| ["#{s.urbanization.name} - #{s.name}", s.id]}, { include_blank: true},
                      class: 'form-control select-2-apple', required: true) %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :value, 'Valor ($):' ,class: 'col-8 col-sm-4' %>
    <%= form.number_field :value, class: 'form-control rounded-0 col-12 col-sm-6', step:'0.001' %>
    <div class="invalid-feedback apple_value"></div>
  </div>

  <div class="form-group row">
    <div class="col-8 col-sm col-lg-9">
      <%= form.select(:condominium_id, @condominia.collect {|c| ["#{c.name}", c.id]}, { include_blank: true},
                      class: 'form-control select-2-condominium', required: true) %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar', class: 'btn u-btn-teal mr-2'  %>
    <button type="button" class="btn u-btn-darkred" data-dismiss="modal">Cerrar</button>
  </div>
<% end %>