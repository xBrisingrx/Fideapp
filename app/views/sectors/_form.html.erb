<%= form_with(model: @sector, id: 'form-sector', class: 'needs-validation g-brd-around g-brd-gray-light-v4 g-pa-30 g-mb-30' ) do |form| %>
  <div id="error_explanation" class="alert alert-danger" style="display:none">
    <ul id="error_list"></ul>
  </div>

  <div class="form-group row">
    <%= form.label :urbanization_id, 'UrbanizaciÃ³n (*)', class: 'col-12 col-sm-6' %>
    <%= form.select(:urbanization_id, @urbanizations.collect {|u| ["#{u.name}", u.id]}, { include_blank: true},
                      class: 'form-control select-2-urbanization col-12 col-sm-6', required: true) %>
  </div>

  <div class="form-group row">
    <%= form.label :name, 'Nombre (*):' ,class: 'col-12 col-sm-6' %>
    <%= form.text_field :name, class: 'form-control rounded-0 col-12 col-sm-6', required: true %>
    <div class="invalid-feedback sector_name"></div>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar', class: 'btn u-btn-teal mr-2'  %>
    <button type="button" class="btn u-btn-darkred" data-dismiss="modal">Cerrar</button>
  </div>
<% end %>