<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Sale</th>
      <th>Date</th>
      <th>Payment</th>
      <th>Payments currency</th>
      <th>Total</th>
      <th>Take in</th>
      <th>Active</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.sale %></td>
        <td><%= payment.date %></td>
        <td><%= payment.payment %></td>
        <td><%= payment.payments_currency %></td>
        <td><%= payment.total %></td>
        <td><%= payment.take_in %></td>
        <td><%= payment.active %></td>
        <td><%= payment.comment %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

