<div class="modal-dialog modal-xl" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title"><%= @title_modal%></h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <ul>
        <% if @cuota.interest > 0 %>
          <li> Interes pagado: <b>$<%= format_currency(@cuota.interest) %></b> </li>
        <% end %>

        <% if @cuota.adjusts.count > 0 %>
          <li> Ajuste: <b>$<%= format_currency(@cuota.get_adjusts) %></b> </li>
        <% end %>

        <li> Total pagado: <b>$<%= format_currency(@cuota.get_payments) %></b> </li>
      </ul>
      <div class="row mx-2">
        <p>Pagos realizados</p>
        <table class="table w-100">
          <thead>
            <tr>
              <th>Fecha</th>
              <th>Moneda</th>
              <th>Ingreso</th>
              <th>Tomado en</th>
              <th>Total</th>
              <th>Adjuntos</th>
              <th>Detalle pago</th>
              <th>Comentario</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @cuota.fee_payments.actives.each do |payment|%>
              <tr>
                <td>
                  <% if payment.date %>
                    <%= payment.date.strftime('%d-%m-%y') %>
                  <% else %>
                    <%= payment.created_at.strftime('%d-%m-%y') %>
                  <% end %>  
                </td>
                <td><%= payment.currency.name %></td>
                <% if payment.currency.id >= 4 %>
                  <td><%= "$#{format_currency( payment.payment )}" %></td>
                <%else%>
                  <td><%= "#{payment.currency.name}#{format_currency( payment.payment )}" %></td>
                <%end%>
                <td><%= "$#{format_currency( payment.tomado_en )}" %></td>
                <td><%= "$#{format_currency( payment.total )}" %></td>
                <td>
                  <% payment.images.each do |image| %>
                    <%= link_to '<i class="hs-admin-image"></i>'.html_safe, image, target: '_blank', class: 'btn u-btn-teal' %>
                  <% end %>
                </td>
                <td> <%= payment.detail %> </td>
                <td>
                  <% if payment.valor_acarreado.to_f > 0 %>
                    <%= payment.comment %> <%= format_currency(payment.valor_acarreado) %>
                  <% end %>
                </td>
                <td>
                  <% if payment.valor_acarreado == 0 %>
                  <%= link_to "<i class='hs-admin-trash' aria-hidden='true'></i>".html_safe, 
                              new_credit_note_path( fee_payment_id: payment.id ),
                              class: 'u-link-v5 g-color-gray-dark-v2 g-color-secondary--hover g-text-underline--none--hover g-ml-12',
                              remote: true %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>              
    </div>
    <div class="mb-2 ml-2">
      <button type="button" class="btn u-btn-teal" data-dismiss="modal" aria-label="Close"> Cerrar </button>
    </div>
  </div>
</div>