<div class="modal-dialog modal-xl" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title"><%= @title_modal%></h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <%= form_with( model: @fee, class: 'needs-validation g-brd-around g-brd-gray-light-v4 g-pa-10 g-mb-10', id: 'form-field-pay-quote' ) do |form| %>

      <%= form.hidden_field :sale_id, value: @fee.sale_id %>

      <div class="form-group row">
        <%= form.label :number_of_fees, 'Cantidad a agregar (*):' ,class: 'col-8 col-sm-4' %>
        <%= form.text_field :number_of_fees, class: 'form-control rounded-0 col-12 col-sm-6', required: true %>
        <div class="invalid-feedback apple_code"></div>
      </div>

      <div class="form-group row">
        <%= form.label :value, 'Valor ($):' ,class: 'col-8 col-sm-4' %>
        <%= form.number_field :value, class: 'form-control rounded-0 col-12 col-sm-6', step:'0.001' %>
        <div class="invalid-feedback apple_value"></div>
      </div>

      <div class="actions">
        <%= form.submit 'Guardar', class: 'btn u-btn-teal mr-2'  %>
        <button type="button" class="btn u-btn-darkred" data-dismiss="modal">Cerrar</button>
      </div>
      <% end %>             
    </div>
  </div>
</div>