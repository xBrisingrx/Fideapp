<div class="modal-dialog modal-xl" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title"><%= @title_modal%></h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <%= form_with( model: @fee, class: 'needs-validation g-brd-around g-brd-gray-light-v4 g-pa-10 g-mb-10', id: 'form-fee' ) do |form| %>

      <%= form.hidden_field :sale_id, value: @fee.sale_id %>
      <div class="form-group row">
        <%= form.label :due_date, 'Vencimiento 1er cuota (*):', class: 'col-12 col-sm-4' %>
        <%= form.date_field :due_date, class: 'form-control rounded-0 col-12 col-sm-6 col-lg-4', required: true %>
        <div class="invalid-feedback apple_code"></div>
      </div>
      <div class="form-group row">
        <%= form.label :number_of_fees_to_add, 'Cantidad a agregar (*):' ,class: 'col-12 col-sm-4' %>
        <%= form.text_field :number_of_fees_to_add, class: 'form-control rounded-0 col-12 col-sm-6 col-lg-4', required: true %>
        <div class="invalid-feedback apple_code"></div>
      </div>

      <div class="form-group row">
        <%= form.label :value, 'Valor ($):' ,class: 'col-12 col-sm-4' %>
        <%= form.text_field :value, class: 'form-control rounded-0 col-12 col-sm-6 col-lg-4', data: { type: "currency" }, required: true %>
        <div class="invalid-feedback apple_value"></div>
      </div>

      <div class="actions">
        <%= form.submit 'Guardar', class: 'btn u-btn-teal mr-2'  %>
        <button type="button" class="btn u-btn-darkred" data-dismiss="modal">Cerrar</button>
      </div>
      <% end %>             
    </div>
  </div>
</div>