<h1>Proyectos</h1>
<div class="row justify-content-between">
  <div class="col-4">
    <%= link_to 'Agregar proyecto', new_project_path, class:'btn u-btn-primary justify-content-end mb-2' %>
  </div>
  <div class="col-4">
    <%= link_to 'Tipos de proyectos', project_types_path, class:'btn u-btn-cyan justify-content-end mb-2' %>
  </div>
</div>

<table id="projects_table" class="table hover dt-responsive w-100">
  <thead>
    <tr>
      <th>#</th>
      <th>Categor√≠a</th>
      <th>Nombre</th>
      <th>Sector</th>
      <th>Manzana</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.number %></td>
        <td><%= project.project_type.name %></td>
        <td><%= project.name %></td>
        <td>
          <%= project.lands&.first&.apple&.sector&.name %>
        </td>
        <td>
          <%= project.lands&.first&.apple&.code %>
        </td>
        <td>
          <%= link_to 'Detalle', project_path(project), class: 'btn u-btn-teal btn-sm', remote: true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- Modal alta de apple -->
<div class="modal fade" id="modal-project" role="dialog"
     aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
</div>
<!-- End modal -->