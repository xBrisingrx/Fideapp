<!-- Login -->
<section class="container g-py-150">
  <div class="row justify-content-center">
    <div class="col-sm-8 col-lg-6">
      <div class="g-brd-around g-brd-gray-light-v4 rounded g-py-40 g-px-30">
        <header class="text-center mb-4">
          <h2 class="h2 g-color-black g-font-weight-600">Login</h2>
        </header>

        <!-- Form -->
        <%= form_with(url: sessions_path, class: 'g-py-15', data: { remote: false }) do |form| %>
          <div class="mb-4">
            <div class="input-group g-brd-primary--focus">
              <div class="input-group-prepend">
                <span class="input-group-text g-width-45 g-brd-right-none g-brd-gray-light-v4 g-color-gray-dark-v5"><i class="icon-finance-067 u-line-icon-pro"></i></span>
              </div>
              <%= form.text_field :username, class: 'form-control g-color-black g-bg-white g-brd-gray-light-v4 g-py-15 g-px-15', placeholder: 'Ingrese nombre de usuario', required: true %>
            </div>
          </div>

          <div class="g-mb-35">
            <div class="input-group g-brd-primary--focus mb-4">
              <div class="input-group-prepend">
                <span class="input-group-text g-width-45 g-brd-right-none g-brd-gray-light-v4 g-color-gray-dark-v5"><i class="icon-media-094 u-line-icon-pro"></i></span>
              </div>
              <%= form.password_field :password, class: 'form-control g-color-black g-bg-white g-brd-gray-light-v4 g-py-15 g-px-15', placeholder: 'Ingrese la contraseÃ±a', required: true %>
            </div>
          </div>

          <div class="mb-4">
            <%= form.submit 'Ingresar', class: 'btn btn-md btn-block u-btn-primary g-py-13'  %>
          </div>
        <% end %>
        <!-- End Form -->

        <footer class="text-center">
          <p class="g-color-gray-dark-v5 g-font-size-13 mb-0">Ingreso al sistema de Fidesur
          </p>
        </footer>
      </div>
    </div>
  </div>
</section>
<!-- End Login -->