<div class="form-group row payment-data">
  <div class="col-3">
    <select name="payment_currency" id="payment_currency" class="form-control rounded-0 payment-currency" onchange="sale.set_exchange()">
      <option value="0"> Tipo de entrega </option>
      <% cp.each do |c| %>
        <option value="<%= c.id %>" data-exchange= <%= c.currency.need_exchange %> data-currency=<%= c.currency.name %> ><%= c.name %></option>
      <%end%>
    </select>
  </div>
  <div class="col-2">
    <input type="number" id='payment' class='form-control rounded-0' step='0.01' onchange="calculo_de_entrega()">
  </div>
  <input type="number" id='exchange_value' class='form-control rounded-0 col-2 ml-2' step='0.01' onchange="calculo_de_entrega()" style="display:none">
  <input type="number" id='calculo_en_pesos' class='form-control rounded-0 col-2 ml-2' step='0.01' placeholder='Calculo valor en $' style="display:none" disabled>
  <input type="text" id="name_pay" class='form-control rounded-0 col-2 ml-2' placeholder='Detalle entrega...'>
  <input type="date" id="pay_date" class='form-control rounded-0 col-2 ml-2'>
  <label class="u-file-attach-v2 g-color-gray-dark-v5 mb-0 ml-2">
    <input id="fileAttachment" name="file-attachment[]" type="file" multiple>
    <i class="icon-cloud-upload g-font-size-16 g-pos-rel g-top-2 g-mr-5"></i>
    <span class="js-value"></span>
  </label>
  <% if first_label %>
    <button id="add-payment" class="btn u-btn-teal ml-2 "> + </button>
  <% else %>
    <button onclick="remove_payment(event)" class="btn u-btn-red ml-2"> - </button>
  <% end %>
</div>