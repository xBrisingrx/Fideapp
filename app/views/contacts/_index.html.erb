<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title"><%= @title_modal%></h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <%= link_to "<i class='fa fa-users'></i> Agregar contacto".html_safe, 
                new_client_contact_path(client_id: @client_id),
                remote: true,
                class: 'btn u-btn-outline-cyan u-btn-hover-v1-2 g-font-weight-600 g-letter-spacing-0_5 g-brd-2 g-rounded-5 g-mr-10 g-mb-10' %>
      <div id="contacts_list" class="row justify-content-center">
        <% @contacts.each do |contact|%>
          <div id="contact_<%= contact.id %>" class="g-brd-blue-left u-shadow-v2 g-brd-around g-brd-gray-light-v4 g-line-height-2 g-pa-10 g-mb-30 col-8 col-sm-4 col-md-3 g-mr-5">
            <p class="mb-0 name"><strong>Nombre:</strong> <%= contact.name %></p>
            <p class="mb-0 relationship"><strong>Parentezco:</strong> <%= contact.relationship %></p>
            <p class="mb-0 phone"><strong>Tel:</strong> <%= contact.phone %></p>
            <div class="d-flex justify-content-end">
              <%# link_to "<i class='hs-admin-pencil-alt'></i>".html_safe,
                edit_client_contact_path( client_id: @client_id, id: contact.id ),
                remote: true, title: "Editar",
                class: "u-link-v5 g-color-bluegray g-color-secondary--hover g-text-underline--none--hover g-font-size-16--md" %>
              <%= link_to "<i class='hs-admin-trash'></i>".html_safe,
                modal_disable_client_contact_path( client_id: @client_id, id: contact.id ),
                remote: true, title: "Eliminar",
                class: "u-link-v5 g-color-bluegray g-color-secondary--hover g-text-underline--none--hover g-font-size-16--md g-ml-12" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="client-modal" role="dialog"
     aria-labelledby="clientModal" aria-hidden="true" data-backdrop="static" data-keyboard="false">
</div>